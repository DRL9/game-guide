// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Bond Fragment 牵绊碎片

// 纹章士刻印
model EmblemImbue {
  order  Int
  emblem String @id // 纹章士
  imbue  String // 刻印
  might  Int // 威力
  weight Int // 重量
  hit    Int // 命中
  crit   Int // 必杀
  avoid  Int // 回避
  ddg    Int // 必避
}

model Weapon {
  order    Int?
  name     String
  kind     String // 种类： 剑/斧 等
  type     String //  equip/engage
  desc     String?
  approach String?
  price    Int?
  might    Int? // 威力
  hit      Int? // 命中
  weight   Int?
  crit     Int?
  avoid    Int?
  ddg      Int?
  rng      Int? // 射程
  level    String?
  eff      String? // 克制

  @@unique([name, type])
}
